<Application x:Class="demoTest.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:demoTest"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        
        <Style x:Key="BtnStyle" TargetType="Button">
            <Setter Property="Background" Value="#FF754292"/>
            <Setter Property="Foreground" Value="#FFFFD8FF"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="MinWidth" Value="50"/>
        </Style>

        <Style x:Key="LblStyle" TargetType="Label">
            <Setter Property="Foreground" Value="#FF754292"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Margin" Value="5"/>
        </Style>

        <Style x:Key="WndwStyle" TargetType="Window">
            <Setter Property="Background" Value="#FFFFD8FF"/>
        </Style>
        
    </Application.Resources>
</Application>
